@{
    ViewBag.Title = "Contact ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contact</h2>

@using (Html.BeginForm("Contact", "Contact"))
{
    <div class="form-group">
        <label>Text</label>
        <input type="text" name="Text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Number</label>
        <input type="number" name="Number" class="form-control" />
    </div>
    <div class="form-group">
        <label>RadioButton</label>
        <div>
            <input type="radio" name="RadioOption" value="Option1" /> Option 1
            <input type="radio" name="RadioOption" value="Option2" /> Option 2
        </div>
    </div>
    <div class="form-group">
        <label>SelectOne</label>
        <select name="SelectOption" class="form-control">
            <option value="Select1">Select 1</option>
            <option value="Select2">Select 2</option>
        </select>
    </div>
    <div class="form-group">
        <label>Options</label>
        <select name="MultiSelectOptions" class="form-control" multiple="multiple">
            <option value="Option1">Option 1</option>
            <option value="Option2">Option 2</option>
            <option value="Option3">Option 3</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}
