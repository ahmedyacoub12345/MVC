@model CodeFirstProject.Models.Task
@{
    ViewBag.Title = "Edit Task";
}

<h2>Edit Task</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.LabelFor(m => m.Title) <!-- Change if your property is named differently -->
        @Html.TextBoxFor(m => m.Title)
        @Html.ValidationMessageFor(m => m.Title)
    </div>
    <div>
        @Html.LabelFor(m => m.ClassId)
        @Html.DropDownListFor(m => m.ClassId, (SelectList)ViewBag.Classes, "Select Class")
        @Html.ValidationMessageFor(m => m.ClassId)
    </div>
    <input type="submit" value="Save" />
}
