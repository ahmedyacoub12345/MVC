@model CodeFirstProject.Models.Student
@{
    ViewBag.Title = "Delete Student";
}

<h2>Delete Student</h2>

<p>Are you sure you want to delete this student: <strong>@Model.Name</strong>?</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <input type="submit" value="Delete" />
    @Html.ActionLink("Cancel", "Index", "Students")
}
