@model IEnumerable<CodeFirstProject.Models.Task>
@{
    ViewBag.Title = "Tasks";
}

<h2>Tasks for Class</h2>

<p>@Html.ActionLink("Add New Task", "Create", "Tasks")</p>

<table class="table">
    <thead>
        <tr>
            <th>Task Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td> <!-- Ensure the Task model has a Name property -->
                <td>
                    @Html.ActionLink("Edit", "Edit", "Tasks", new { id = task.Id }, null) |
                    @Html.ActionLink("Delete", "Delete", "Tasks", new { id = task.Id }, null)
                </td>
            </tr>
        }
    </tbody>
</table>
