@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Admin1", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div>
        <label class="control-label col-md-2">Enter URL:</label>
        @Html.TextBox("URL", null, new { @class = "form-control" })
    </div>
    <div>
        <label class="control-label col-md-2">Enter Product Name:</label>
        @Html.TextBox("Name", null, new { @class = "form-control" })
    </div>
    <div>
        <label class="control-label col-md-2">Enter The Price:</label>
        @Html.TextBox("Price", null, new { @class = "form-control" })
    </div>
    <button type="submit">Add Product</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
